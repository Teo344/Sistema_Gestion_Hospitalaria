@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Inicio Sesion - Gestion Hospital de Quito</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-login">
    <div class="d-flex align-items-center justify-content-center min-vh-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-5">
                    <div class="card shadow-lg border-0 rounded-4">
                        <div class="card-header bg-white text-center">
                            <h3 class="text-primary my-3">
                                <i class="bi bi-person-circle me-2"></i>Inicia Sesión
                            </h3>
                        </div>
                        <div class="card-body p-4">
                            @if (ViewBag.Error != null)
                            {
                                <div class="alert alert-danger text-center" role="alert">
                                    @ViewBag.Error
                                </div>
                            }
                            <form action="@Url.Action("Index", "Acceso")" method="post">
                                <!-- Campo de correo electrónico -->
                                <div class="mb-3">
                                    <label for="inputEmail" class="form-label">Correo electrónico</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="bi bi-envelope"></i>
                                        </span>
                                        <input class="form-control" name="email" type="email" placeholder="correo@ejemplo.com" required />
                                    </div>
                                </div>

                                <!-- Campo de contraseña -->
                                <div class="mb-3">
                                    <label for="inputPassword" class="form-label">Contraseña</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="bi bi-lock"></i>
                                        </span>
                                        <input class="form-control" name="clave" type="password" placeholder="Contraseña" required />
                                    </div>
                                </div>

                                <!-- Botón de inicio de sesión -->
                                <button type="submit" class="btn btn-primary btn-lg w-100">
                                    <i class="bi bi-box-arrow-in-right me-2"></i>Iniciar Sesión
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>